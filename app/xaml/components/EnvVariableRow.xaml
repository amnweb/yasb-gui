<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="200"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <CheckBox x:Name="EnableCheckbox" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"/>
    <TextBox x:Name="NameTextbox" Grid.Column="1" PlaceholderText="VARIABLE_NAME" Margin="0,0,8,0" VerticalAlignment="Center"/>
    <TextBox x:Name="ValueTextbox" Grid.Column="2" PlaceholderText="value" Margin="0,0,8,0" VerticalAlignment="Center"/>
    <Button x:Name="DeleteButton" Grid.Column="3" Padding="8,6" VerticalAlignment="Center">
        <FontIcon Glyph="&#xE74D;" FontSize="12"/>
    </Button>
</Grid>
