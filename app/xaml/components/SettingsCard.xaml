<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="4"
        Padding="16"
        Margin="0,0,0,0"
        HorizontalAlignment="Stretch">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <FontIcon x:Name="IconGlyph"
                  Grid.Column="0"
                  FontSize="20"
                  Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                  VerticalAlignment="Center"
                  Margin="0,0,16,0"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
            <TextBlock x:Name="TitleText" Style="{StaticResource BodyTextBlockStyle}"/>
            <TextBlock x:Name="DescriptionText" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
        <StackPanel x:Name="ControlContainer" Grid.Column="2" VerticalAlignment="Center"/>
    </Grid>
</Border>
