<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      HorizontalAlignment="Stretch">
    <Grid.RenderTransform>
        <TranslateTransform x:Name="ContainerTransform"/>
    </Grid.RenderTransform>
    <Button x:Name="MainButton" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="12,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Spacing="2" VerticalAlignment="Center">
                <TextBlock x:Name="NameText" FontWeight="SemiBold"/>
                <TextBlock x:Name="SubText" FontSize="11" Opacity="0.6" TextWrapping="Wrap"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="2" VerticalAlignment="Center" Margin="8,0,0,0">
                <Button x:Name="UpButton" Padding="6,6" ToolTipService.ToolTip="Move Up">
                    <FontIcon Glyph="&#xE74A;" FontSize="12" FontFamily="Segoe Fluent Icons"/>
                </Button>
                <Button x:Name="DownButton" Padding="6,6" ToolTipService.ToolTip="Move Down">
                    <FontIcon Glyph="&#xE74B;" FontSize="12" FontFamily="Segoe Fluent Icons"/>
                </Button>
            </StackPanel>
        </Grid>
    </Button>
</Grid>
