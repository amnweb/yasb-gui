<ContentDialog xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="{title}"
                PrimaryButtonText="{primary}"
                DefaultButton="Primary">
  <StackPanel Spacing="12" MinWidth="350">
    <TextBlock Text="{message}" TextWrapping="Wrap" />
    <TextBlock Text="{hint}" TextWrapping="Wrap" Foreground="{{ThemeResource TextFillColorSecondaryBrush}}" />
  </StackPanel>
</ContentDialog>
