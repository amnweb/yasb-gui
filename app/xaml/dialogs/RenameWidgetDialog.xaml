<ContentDialog xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="{title}"
                PrimaryButtonText="{primary}"
                CloseButtonText="{close}"
                DefaultButton="Primary">
  <StackPanel Spacing="8" MinWidth="300">
    <TextBox x:Name="NameInput" Text="{name}" PlaceholderText="{placeholder}"/>
    <TextBlock x:Name="ErrorText" Foreground="{{ThemeResource SystemFillColorCriticalBrush}}" 
               TextWrapping="Wrap" Visibility="Collapsed"/>
  </StackPanel>
</ContentDialog>
