<ContentDialog xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="{title}"
                PrimaryButtonText="{primary}"
                SecondaryButtonText="{secondary}"
                DefaultButton="Primary">
  <StackPanel Spacing="12" MinWidth="300">
    <TextBlock x:Name="StatusText" Text="{status}" TextWrapping="Wrap" />
    <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Value="0" Visibility="Collapsed" />
  </StackPanel>
</ContentDialog>
