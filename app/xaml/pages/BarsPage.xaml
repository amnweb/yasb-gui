<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" Padding="40,24,40,24">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel MaxWidth="1000" HorizontalAlignment="Stretch" Spacing="16">
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="PageTitle" Text="Bars" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock x:Name="SelectBarLabel" Text="Select bar" VerticalAlignment="Center"/>
                        <ComboBox x:Name="BarSelector" MinWidth="180"/>
                        <Button x:Name="AddBarButton">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE710;" FontSize="12"/>
                                <TextBlock x:Name="AddBarText" Text="Add Bar" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="DeleteBarButton">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE74D;" FontSize="12"/>
                                <TextBlock x:Name="DeleteBarText" Text="Delete Bar" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <StackPanel x:Name="BarSettingsPanel" Spacing="4" HorizontalAlignment="Stretch" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
