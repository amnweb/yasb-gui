<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel x:Name="HeaderPanel" Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
            <TextBlock x:Name="PageTitle" Text="Styles (CSS)" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <WebView2 x:Name="CssEditor" Visibility="Collapsed"/>
            <Grid x:Name="LoadingOverlay" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ProgressRing IsActive="True" Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
