<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" Padding="40,24,40,24">
        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel MaxWidth="1000" HorizontalAlignment="Stretch" Spacing="16">
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="PageTitle" Text="Widgets" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock x:Name="SelectBarLabel" Text="Select bar" VerticalAlignment="Center"/>
                        <ComboBox x:Name="BarSelector" MinWidth="180"/>
                    </StackPanel>
                </Grid>
                <StackPanel x:Name="SectionsPanel" Spacing="4"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
